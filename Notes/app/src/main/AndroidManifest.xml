<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notes_test">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notes">

        <!-- Sample AdMob app ID: ca-app-pub-3940256099942544~3347511713 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5642944910710670~1781387042" />

        <activity
            android:name=".fragments.GoalProgress"
            android:parentActivityName=".MainScreen" />
        <activity android:name=".fragments.NewGoal" />
        <activity
            android:name=".MainScreen"
            android:label="@string/title_activity_main"
            android:parentActivityName=".LogInActivity"
            android:theme="@style/Theme.Notes.NoActionBar" />
        <activity
            android:name=".fragments.NewNote"
            android:parentActivityName=".MainScreen" />
        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".MyService" />
    </application>

</manifest>