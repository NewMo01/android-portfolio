<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GoalProgress"
    android:background="@color/black"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <TextView
        android:id="@+id/tv_targetName_prog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target name"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_time_prog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time_prog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text="00:00:00"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCancel"
        app:layout_constraintEnd_toEndOf="@+id/tv_targetName_prog"
        app:layout_constraintStart_toStartOf="@+id/tv_targetName_prog"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tasks_prog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tasks"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCancel"
        app:layout_constraintEnd_toEndOf="@+id/tv_time_prog"
        app:layout_constraintStart_toStartOf="@+id/tv_time_prog"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_prog" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Cancel"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="cancelOnClick"
        tools:ignore="UsingOnClickInXml" />
</androidx.constraintlayout.widget.ConstraintLayout>